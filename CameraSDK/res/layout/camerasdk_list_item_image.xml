    <CheckBox
        android:id="@+id/checkmark"
        android:button="@drawable/camerasdk_selector_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:checked="false"
